	.modal__overlay()
		.modal__wrapper.my-modal-wrapper
			.modal__container.work-modal.my-modal()
				span.modal__close()
					span
					span
				.sidebar
					.sidebar__layout
						.f-container
							.sidebar__info
								form.vacancy-modal__sidebar-vacancy-form
									.manager-select-wrap
							.sidebar__notes.vacancy-modal__sidebar-notes
							.sidebar__actions
								ul.sidebar__action
									li.sidebar__action-item
							.sidebar__menu
								ul.sidebar__filter
									li.sidebar__filter-item.active(data-part="vacancy-data")
										.sidebar__filter-wrapper
											p
