									li.sidebar__filter-item(data-part="check-list")
										.sidebar__filter-wrapper
											p
												|Чек-лист
									li.sidebar__filter-item(data-part="print-pt")
										.sidebar__filter-wrapper
											p
												|Распечатать ПТ
									
									li.sidebar__filter-item(data-part="archive-vacancy").archive-item#vacancy-archive
									li.sidebar__filter-item(data-part="create-vacancy-copy").copy-item#vacancy-copy
									li.sidebar__filter-item.delete-item#vacancy-delete
				.rows
					#vacancy-data.vacancy-data.my-modal-part.active
